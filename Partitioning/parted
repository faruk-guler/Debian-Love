#parted:

sudo parted /dev/sda
print
quit

mklabel gpt        # GPT bölümleme tablosu oluştur > 2 TB'a kadar olan diskler için.
mklabel msdos      # MBR (MSDOS) bölümleme tablosu oluştur > 9.4 zettabytes (ZB) kadar olan diskler için.
mkpart primary ext4 0% 50%      # İlk bölümü oluştur (0% - 50%)
mkpart logical ext4 50% 100%    # İkinci bölümü oluştur (50% - 100%)




#rm 1    # 1 numaralı bölümü siler
#resizepart 1 100GB    # 1 numaralı bölümü 100 GB yapar
#sudo mkfs.ext4 /dev/sda5

(parted) mklabel gpt       # GPT bölümlendirme tablosu oluştur
(parted) mkpart primary ext4 0% 50%  # İlk bölümü oluştur
(parted) mkpart primary ext4 50% 100% # İkinci bölümü oluştur
(parted) quit              # Parted'i kapat



